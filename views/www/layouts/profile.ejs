    <div class="profile-container">
        <div class="profile-header">
            <img src="https://img.icons8.com/ios-filled/100/007bff/user.png" alt="User Avatar" class="avatar">
            <h2 class="profile-subtitle">Welcome, <%= data.username %></h2>
            <p class="profile-description">Email: <%= data.email %></p>
        </div>
        <h1 class="profile-title">Your Profile</h1>
        <h2 class="profile-subtitle">Your Bookings</h2>
        
        <% if (!bookings || bookings.length === 0) { %>
            <p class="no-bookings">You have no bookings at this time.</p>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Service</th>
                            <th>User</th>
                            <th>Booked Name</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(booking => { %>
                            <tr>
                                <td><i class="fas fa-concierge-bell"></i> <%= booking.service.heading %></td>
                                <td><%=  data.username  %></td>
                                <td><%=  booking.name%></td>
                                <td><%= booking.service_date.toISOString().split('T')[0] %></td>
                                <td><%= booking.time %></td>
                                <td><%= booking.status %></td>
                            </tr>   
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>

        <div class="text-center">
            <!-- Optional action buttons can go here -->
            <!-- <button class="action-button button-primary">Edit Profile</button> -->
            <!-- <button class="action-button button-danger">Cancel Booking</button> -->
        </div>
    </div>

